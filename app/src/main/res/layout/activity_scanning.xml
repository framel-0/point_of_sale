<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScanningActivity">

    <TextView
        android:id="@+id/textBarcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Scan Barcode"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        app:layout_constraintBottom_toTopOf="@+id/editTextBarcode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <EditText
        android:id="@+id/editTextBarcode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Barcode"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/buttonBarcodeEnter"
        app:layout_constraintEnd_toEndOf="@+id/textBarcode"
        app:layout_constraintStart_toStartOf="@+id/textBarcode"
        app:layout_constraintTop_toBottomOf="@+id/textBarcode" />

    <Button
        android:id="@+id/buttonBarcodeEnter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/editTextBarcode"
        app:layout_constraintStart_toStartOf="@+id/editTextBarcode"
        app:layout_constraintTop_toBottomOf="@+id/editTextBarcode" />
</androidx.constraintlayout.widget.ConstraintLayout>